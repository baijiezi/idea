<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context.xsd">

    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <!--<ref bean="stocksTaskTrigger" />-->
                <ref bean="stockPriceTaskTrigger" />
                <ref bean="stockZjlxDfcfTaskTrigger" />
                <ref bean="stockZjlxHXTaskTrigger" />
                <ref bean="stockZjlxThsTaskTrigger" />
                <ref bean="stockDailyKLineMA5TaskTrigger" />
                <ref bean="stockDailyKLineMA10TaskTrigger" />
                <ref bean="stockDailyKLineMA20TaskTrigger" />
