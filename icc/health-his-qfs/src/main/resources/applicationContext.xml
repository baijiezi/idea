<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context.xsd">

    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <!--<ref bean="stocksTaskTrigger" />-->
                <ref bean="stockPriceTaskTrigger" />
                <ref bean="stockZjlxDfcfTaskTrigger" />
            </list>
        </property>
    </bean>

    <bean id="stocksTaskTrigger"
          class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="stocksTaskJobDetail" />
        <!-- 每10秒运行一次 -->
        <property name="cronExpression" value="0/60 * * * * ?" />
    </bean>
    <bean id="stockPriceTaskTrigger"
          class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="stockPriceTaskJobDetail" />
        <!-- 每10秒运行一次 -->
        <property name="cronExpression" value="0 55 18 * * ?" />
    </bean>
    <bean id="stockZjlxDfcfTaskTrigger"
          class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="stockZjlxDfcfJobDetail" />
        <!-- 每10秒运行一次 -->
        <property name="cronExpression" value="0 15 19 * * ?" />
    </bean>

    <bean id="stocksTaskJobDetail"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <!-- 指定任务类 -->
        <property name="targetObject" ref="stocksTask" />
        <!-- 指定任务执行的方法 -->
        <property name="targetMethod" value="execute" />
    </bean>
    <bean id="stockPriceTaskJobDetail"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <!-- 指定任务类 -->
        <property name="targetObject" ref="stockPriceTask" />
        <!-- 指定任务执行的方法 -->
        <property name="targetMethod" value="execute" />
    </bean>
    <bean id="stockZjlxDfcfJobDetail"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <!-- 指定任务类 -->
        <property name="targetObject" ref="stockZjlxDfcf" />
        <!-- 指定任务执行的方法 -->
        <property name="targetMethod" value="execute" />
    </bean>

    <bean id="stocksTask" class="com.stocks.task.StockTask"></bean>
    <bean id="stockPriceTask" class="com.stocks.task.StockPriceTask"></bean>
    <bean id="stockZjlxDfcf" class="com.stocks.task.StockZjlxDfcfTask"></bean>




</beans>