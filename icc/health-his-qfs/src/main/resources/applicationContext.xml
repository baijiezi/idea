<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.springframework.org/schema/context
            http://www.springframework.org/schema/context/spring-context.xsd">

    <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
        <property name="triggers">
            <list>
                <!--<ref bean="stocksTaskTrigger" />-->
                <ref bean="stockPriceTimeTaskTrigger" />
                <ref bean="stockPriceTaskTrigger" />
                <ref bean="stockZjlxDfcfTaskTrigger" />
                <ref bean="stockZjlxHXTaskTrigger" />
                <ref bean="stockZjlxThsTaskTrigger" />
                <ref bean="stockDailyKLineMA5TaskTrigger" />
                <ref bean="stockDailyKLineMA10TaskTrigger" />
                <ref bean="stockDailyKLineMA20TaskTrigger" />
                <ref bean="stockDailyKLineMA30TaskTrigger" />
                <ref bean="messageTaskTrigger" />
                <ref bean="fhsgTaskTrigger" />
                <ref bean="stockJunXianPaiLieTrigger" />
                <ref bean="priceTrendsTaskTrigger" />
                <!--<ref bean="chooseTaskTrigger" />-->
                <!--<ref bean="exportTaskTrigger" />-->
            </list>
        </property>
    </bean>

    <bean id="stockPriceTimeTaskTrigger"
          class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="stockPriceTimeJobDetail" />
        <property name="cronExpression" value="0 20 9 ? * MON-FRI" />
    </bean>
    <bean id="stockPriceTimeJobDetail"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <!-- 指定任务类 -->
        <property name="targetObject" ref="stockPriceTime" />
        <!-- 指定任务执行的方法 -->
        <property name="targetMethod" value="execute" />
    </bean>
    <bean id="stockPriceTime" class="com.stocks.task.StockPriceTimeTask"></bean>

    <bean id="stocksTaskTrigger"
          class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="stocksTaskJobDetail" />
        <property name="cronExpression" value="0/60 * * * * ?" />
    </bean>
    <bean id="stocksTaskJobDetail"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="stocksTask" />
        <property name="targetMethod" value="execute" />
    </bean>
    <bean id="stocksTask" class="com.stocks.task.StockTask"></bean>

    <bean id="messageTaskTrigger"
          class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="messageJobDetail" />
        <property name="cronExpression" value="0 35 11 ? * MON-FRI" />
    </bean>
    <bean id="messageJobDetail"
          class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
        <property name="targetObject" ref="messageTask" />
        <property name="targetMethod" value="execute" />
    </bean>
    <bean id="messageTask" class="com.message.task.MessageTask"></bean>

    <bean id="fhsgTaskTrigger"
          class="org.springframework.scheduling.quartz.CronTriggerFactoryBean">
        <property name="jobDetail" ref="fhsgJobDetail" />
        <property name="cronExpression" value="0 30 17 * * ?" />
